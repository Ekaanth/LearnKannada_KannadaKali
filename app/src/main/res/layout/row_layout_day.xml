<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/cardview_compat_inset_shadow"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/textColumnID"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.9"
                android:orientation="vertical"
                android:paddingEnd="2dp"
                android:paddingStart="7dp">

                <TextView
                    android:id="@+id/textID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="@string/test"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textInKanID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:paddingTop="3dp"
                    android:text="@string/description"
                    android:textSize="17sp" />

            </LinearLayout>

            <View
                android:id="@+id/dividerID"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#736d6d"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="2dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingStart="7dp">

                <TextView
                    android:id="@+id/textInKannadaId"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="17sp"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/card_materialYellow"
                    android:textStyle="bold"
                    android:text="ಕನ್ನಡವೇ ಸತ್ಯ, ಕನ್ನಡವೇ ನಿತ್ಯ"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/exampleButtonID"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:text="@string/Example"
                    android:textColor="@color/red_600"
                    android:textStyle="bold"
                    android:layout_marginEnd="5dp"
                    android:visibility="visible" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/dayImageID"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:layout_margin="20dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/speaker" />

    </android.support.v7.widget.CardView>

</RelativeLayout>