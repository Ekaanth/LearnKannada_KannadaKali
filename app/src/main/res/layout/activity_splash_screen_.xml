<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:components="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.learnkannada.com.learnkannadakannadakali.SplashScreen_Activity">

    <ScrollView
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <app.learnkannada.com.learnkannadakannadakali.GIFView
                android:id="@+id/welcomeFlagID"
                components:src="@raw/flag_gif"
                android:layout_margin="20dp"
                android:layout_width="295dp"
                android:layout_height="150dp" />

            <TextView
                android:id="@+id/welcomeID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:textSize="30sp"
                android:textStyle="bold"
                android:fontFamily="cursive"
                android:text="@string/welcomeNote"/>

            <ImageView
                android:id="@+id/logoID"
                android:src="@drawable/hitham"
                android:layout_gravity="right"
                android:layout_marginTop="60dp"
                android:layout_width="100dp"
                android:layout_height="80dp" />

        </LinearLayout>

    </ScrollView>


</RelativeLayout>
