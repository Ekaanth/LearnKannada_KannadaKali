<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:components="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.learnkannada.com.learnkannadakannadakali.SplashScreen_Activity">

    <app.learnkannada.com.learnkannadakannadakali.GIFView
        android:id="@+id/welcomeFlagID"
        components:src="@drawable/flag_gif"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/welcomeID"
        android:layout_margin="20dp"
        android:layout_width="295dp"
        android:layout_height="150dp" />

    <!--<ImageView
        android:id="@+id/welcomeFlagID"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/welcomeID"
        android:src="@drawable/flag_gif"
        android:layout_margin="30dp"
        android:layout_width="300dp"
        android:layout_height="100dp" />-->

    <TextView
        android:id="@+id/welcomeID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/logoID"
        android:layout_margin="30dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:text="@string/welcomeNote"/>

    <ImageView
        android:id="@+id/logoID"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/hitham"
        android:layout_margin="30dp"
        android:layout_width="100dp"
        android:layout_height="80dp" />

</RelativeLayout>
